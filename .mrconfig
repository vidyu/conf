
[.password-store]
checkout = git clone 'git@gitlab.com:dev-vidyu/password-store.git' '.password-store'

[.password-store-private]
checkout = git clone 'git@gitlab.com:dev-vidyu/password-store-private.git' '.password-store-private'

[.spacemacs.d]
checkout = git clone 'git@github.com:vidyu/conf.git' '.spacemacs.d'
	          cd .spacemacs.d
	          git checkout spacemacs.d/master
	          yarn install

[.emacs.d]
checkout = git clone 'https://github.com/syl20bnr/spacemacs' '.emacs.d'
         cd .emacs.d
         git checkout develop

[.config/vcsh/repo.d/zprezto.git]
checkout = vcsh clone -b vcsh/zprezto git@github.com:vidyu/conf.git zprezto
         vcsh zprezto submodule init
         vcsh zprezto submodule update --recursive
         cd ~/.zprezto && git submodule init && git submodule update --recursive
         cd ~/.zprezto/contrib && git submodule init && git submodule update --recursive
update = git pull --recurse-submodules

